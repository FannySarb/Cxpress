<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="130dp"
    android:layout_margin="20dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="20dp">

    <ImageView
        android:id="@+id/imgItemPago"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_tarjeta" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:maxLines="1"
        android:text="Tipo de pago: Tarjeta"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtViewItemNombreBanco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtViewItemNumeroTarjeta"
        android:layout_width="207dp"
        android:layout_height="33dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="80dp"
        android:maxLines="1"
        android:text="No. Tarjeta"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnEliminarItemPago"
        android:layout_width="36dp"
        android:layout_height="35dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_delete_black_24dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtViewItemNombreBanco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="111dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="193dp"
        android:layout_marginRight="193dp"
        android:layout_marginBottom="10dp"
        android:text="Banco"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/txtViewItemNumeroTarjeta"
        app:layout_constraintEnd_toStartOf="@+id/btnEliminarItemPago"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />
</androidx.cardview.widget.CardView>